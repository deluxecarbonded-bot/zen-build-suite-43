{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8080",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Serenity Browser - Edge WebView2",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "process": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.serenity.browser.multiplatform",
      "icon": [
        "icons/icon.ico"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "template": "main.wxs"
        },
        "nsis": {
          "template": "installer.nsi",
          "preCompressHooks": [],
          "postCompressHooks": []
        }
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "entitlements": null,
        "exceptionDomain": "",
        "signingIdentity": null,
        "hardenedRuntime": true,
        "dmg": {
          "appPosition": {
            "x": 180,
            "y": 170
          },
          "applicationFolderPosition": {
            "x": 480,
            "y": 170
          },
          "windowSize": {
            "width": 660,
            "height": 400
          }
        }
      },
      "linux": {
        "deb": {
          "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0"]
        },
        "appimage": {
          "bundleMediaFramework": false
        }
      },
      "publisher": "Serenity Browser Team",
      "copyright": "Copyright Â© 2024 Serenity Browser",
      "category": "Productivity",
      "shortDescription": "Cross-platform Serenity Browser",
      "longDescription": "A minimalist, distraction-free browser with native web engine support across Windows (Edge WebView2), macOS (WebKit), and Linux (WebKitGTK)."
    },
    "security": {
      "csp": "default-src 'self' http: https: data: blob:; connect-src http: https:; frame-src http: https:;"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Serenity Browser - Edge WebView2",
        "width": 1920,
        "height": 1080,
        "minWidth": 1920,
        "minHeight": 1080,
        "center": true,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "titleBarStyle": "Visible",
        "webSecurity": true,
        "additionalBrowserArgs": "--enable-webgl --enable-gpu-acceleration --enable-hardware-acceleration --disable-dev-tools --enable-webview2-features --enable-smooth-scrolling --enable-directwrite --enable-gpu-rasterization --disable-background-timer-throttling"
      }
    ]
  }
}
